{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Backend-development",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "args": [
                "run"
            ],
            "env": {
                "FLASK_ENV": "development",
                "FLASK_APP": "autoapp.py",
                "EGI_CLIENT_ID": "eosc-performance",
                "EGI_CLIENT_SECRET": "",
                "ADMIN_ENTITLEMENTS": "",
                "DB_ENGINE": "postgresql",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_USER": "mynonsuperuser",
                "DB_PASSWORD": "",
                "DB_NAME": "eosc_perf",
            }
        },
        {
            "name": "Backend-production",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "args": [
                "run"
            ],
            "env": {
                "FLASK_ENV": "production",
                "FLASK_APP": "autoapp.py",
                "GUNICORN_WORKERS": "1",
                "SECRET_KEY": "",
                "EGI_CLIENT_ID": "eosc-performance",
                "EGI_CLIENT_SECRET": "",
                "ADMIN_ENTITLEMENTS": "",
                "DB_ENGINE": "postgresql",
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_USER": "mynonsuperuser",
                "DB_PASSWORD": "",
                "DB_NAME": "eosc_perf",
                "MAIL_SUPPORT": "",
                "MAIL_FROM": "",
                "MAIL_SERVER": "",
                "MAIL_PORT": "25"
            }
        },
    ]
}